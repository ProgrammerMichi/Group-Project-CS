# Connect to a persistent file-based database
rating_conn = sqlite3.connect("userratings.db", check_same_thread=False)
rating_cursor = rating_conn.cursor()

# Create the 'userratings' table if it doesn't exist
rating_cursor.execute("""
CREATE TABLE IF NOT EXISTS userratings (
    ratingId INTEGER PRIMARY KEY AUTOINCREMENT,  
    userId INTEGER,                              
    username TEXT,                               
    movietitle TEXT,                            
    rating REAL                          
)
""")
rating_conn.commit()
